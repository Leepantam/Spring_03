<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
 <mapper namespace="com.leepantam.s3.member.MemberDAO">
 	<select id="memberLogin" parameterType="MemberDTO" resultType="MemberDTO">
 		select * from users where id=#{id} and pw=#{pw}
 	</select>
 	
 	<insert id="memberJoin" parameterType="MemberDTO">
 		insert into users (id,pw,name,phone,email) values(#{id},#{pw},#{name},#{phone},#{email})
 	</insert>
 	
 	<delete id="memberDelete" parameterType="MemberDTO">
 		delete from users where id=#{id}
 	</delete>
 	
 	<update id="memberUpdate" parameterType="MemberDTO">
 		update users set pw=#{pw}, name=#{name}, phone=#{phone},email=#{email} where id=#{id}
 	</update>
 
 
 </mapper>