<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.leepantam.s3.board.qna.QnaDAO">
	<select id="getList" resultType="QnaDTO" parameterType="Pager">
		select *
		from
		(select rownum R, Q.* from
		(select * from qna order by ref desc,step asc) Q)
		where R between #{startRow} and #{lastRow}
	</select>
	<insert id="setInsert" parameterType="BoardDTO">
		insert into qna
		values(qna_seq.nextval,#{title},#{writer},#{contents},sysdate,0,qna_seq.currval,0,0)
	</insert>
	<select id="getSelect" parameterType="BoardDTO"
		resultType="QnaDTO">
		select * from qna where num=#{num}
	</select>

	<update id="setHitUpdate" parameterType="BoardDTO">
		update qna set hit =
		hit+1 where num=#{num}
	</update>
	<update id="setReplyUpdate" parameterType="QnaDTO">
		update qna set
		step=step+1 where ref = #{ref} and step >#{step}
	</update>
	<insert id="setReply" parameterType="QnaDTO">
		insert into qna
		values(qna_seq.nextval,#{title},#{writer},#{contents},sysdate,0,#{ref},#{step},#{depth})
	</insert>
	<delete id="setDelete" parameterType="BoardDTO">
		delete from qna where
		num=#{num}
	</delete>
	<update id="setUpdate" parameterType="BoardDTO">
		update qna set
		title=#{title}, writer=#{writer}, regdate=sysdate,
		hit=#{hit}
		,contents=#{contents} where num=#{num}
	</update>
	
	<select id="getTotalCount" resultType="Long" parameterType="Pager">
		select count(num) totalCount from qna
		where 
		<choose>
			<when test="kind=='Writer'">
				writer
			</when>
			<when test="kind=='Contents'">
				contents
			</when>
			<otherwise>
				title
			</otherwise>
		</choose>
		like '%' || #{search} || '%' and num>0
	</select>
</mapper> 