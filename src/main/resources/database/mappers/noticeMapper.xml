<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.leepantam.s3.notice.NoticeDAO">
	<select id="getList" resultType="NoticeDTO" parameterType="Pager">
		select * from
		(select rownum R, N.* from
		(select * from notice order by num desc) N)
		where R between #{startRow} and #{lastRow}
	</select>
	<select id="getSelect" parameterType="NoticeDTO"
		resultType="NoticeDTO">
		select * from notice where num=#{num}
	</select>
	<delete id="setDelete" parameterType="NoticeDTO">
		delete from notice where num=#{num}
	</delete>
	<insert id="setInsert" parameterType="NoticeDTO">
		insert into notice
		values(notice_seq.nextval,#{title},#{contents},#{writer},sysdate,0)
	</insert>
	<update id="setUpdate" parameterType="NoticeDTO">
		update notice set title=#{title}, writer=#{writer}, regdate=sysdate,
		hit=#{hit} ,contents=#{contents} where num=#{num}
	</update>
	<update id="setHitUpdate" parameterType="NoticeDTO">
		update notice set hit=(select hit from notice where num=#{num})+1 where
		num=#{num}
	</update>
	<select id="getTotalCount" resultType="Long">
		select count(num) totalCount from notice
	</select>
</mapper>